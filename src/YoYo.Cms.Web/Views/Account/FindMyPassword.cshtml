@using Abp.Authorization.Users
@using Abp.MultiTenancy
@using Abp.Web.Mvc.Extensions

@section Styles
{
    @Html.IncludeStyle("~/Views/Account/findmypassword.css")
}
@section Scripts
{

    @Html.IncludeScript("~/creativeTim/assets/js/material.min.js")
    @Html.IncludeScript("~/creativeTim/assets/js/material-kit.js")
    @Html.IncludeScript("/Views/Account/FindMyPassword.js")
}

<body class="signup-page">
    <nav class="navbar navbar-transparent navbar-absolute">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navigation-example">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/">
                            返回首页
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="wrapper">
        <div class="header header-filter" style="background-image: url('/creativeTim/assets/img/city.jpg'); background-size: cover; background-position: top center;">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                        <div class="card card-signup">
                            <form class="form" id="findMypasswordForm" name="loginFormData" novalidate>
                                <div class="header-primary findpwd-hearder">
                                    <div>请输入你要找回的账号</div>
                                </div>
                                <div class="content">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-user-o"></i>
                                        </span>
                                        <input type="text" class="form-control" placeholder="请输入账号" autocomplete="off" id="UserName" name="UserName" maxlength="@AbpUserBase.MaxUserNameLength">
                                    </div>
                                </div>
                                <div class="footer text-center">
                                    <button type="submit" href="#pablo" class="btn btn-primary">下一步</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>