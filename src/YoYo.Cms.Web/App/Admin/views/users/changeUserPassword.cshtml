 <div class="x_panel">
     <div class=" x_content">
         <form name="userPasswordForm" role="form" novalidate class="form-horizontal form-label-left">
             <div class="modal-header">
                 <h3 class="modal-title">
                     <span>@L("ChangePassword")</span>
                 </h3>
             </div>
             <div class="modal-body">
                 <div class="form-group ">
                     <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                     @L("CurrentPassword")<span class="required">*</span>
                     </label>
                     <div class="col-md-6 col-sm-6 col-xs-12">
                         <input type="password"  required ng-minlength="3" ng-maxlength="8" ng-model="vm.userPasswordInfo.currentPassword" class="form-control col-md-7 col-xs-12">
                     </div>
                 </div>

                 <div class="form-group ">
                     <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                         @L("NewPassword") <span class="required">*</span>
                     </label>
                     <div class="col-md-6 col-sm-6 col-xs-12">
                         <input type="password" required="required" ng-model="vm.userPasswordInfo.newPassword"  class="form-control col-md-7 col-xs-12">
                     </div>
                 </div>
                 <div class="form-group ">
                     <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                        @L("NewPasswordRepeat") <span class="required">*</span>
                     </label>
                     <div class="col-md-6 col-sm-6 col-xs-12">
                         <input type="password" required="required" ng-model="vm.userPasswordInfo.newPasswordRepeat" required ui-validate=" '$value==vm.userPasswordInfo.newPassword' " ui-validate-watch=" 'vm.userPasswordInfo.newPassword' " class="form-control col-md-7 col-xs-12">
                     </div>
                 </div>
             </div>


             <div class="modal-footer">
                 <button type="button" ng-disabled="vm.saving" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
                 <button type="submit" button-busy="vm.saving" ng-disabled="userPasswordForm.$invalid"   busy-text="@L("SavingWithThreeDot")" class="btn btn-primary " ng-click="vm.save()"><i class="fa fa-save"></i> <span>@L("Save")</span></button>


             </div>


         </form>


     </div>

 </div>